<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Automata"
        xmlns:Custom="http://schemas.microsoft.com/winfx/2006/xaml/presentation/ribbon" x:Class="Automata.AutomataSelect"
        mc:Ignorable="d"
		Background="#333333" ResizeMode="NoResize"
        Title="Automata Select" Height="450" Width="800" WindowStartupLocation="CenterScreen">
	<Window.Resources>
		<Style x:Key="DGStyle" TargetType="{x:Type DataGrid}">
			<Setter Property="Background" Value="#666666"/>
			<Setter Property="ColumnHeaderStyle" Value="{DynamicResource DGCHeaderStyle}"/>
			<Setter Property="CellStyle" Value="{DynamicResource DGCStyle}"/>
			<Setter Property="RowStyle" Value="{DynamicResource DGRStyle}"/>
			<Setter Property="GridLinesVisibility" Value="None"/>
		</Style>
		<Style x:Key="DGRStyle" TargetType="DataGridRow">
			<EventSetter Event="Selected" Handler="OnRowSelect"/>
		</Style>
		<Style x:Key="DGCHeaderStyle" TargetType="DataGridColumnHeader">
			<Setter Property="Height" Value="30"/>
			<Setter Property="HorizontalContentAlignment" Value="Center"/>
			<Setter Property="Foreground" Value="Orange"/>
			<Setter Property="Background" Value="#666666"/>
		</Style>
		<Style x:Key="DGCStyle" TargetType="DataGridCell">
			<Setter Property="Height" Value="30"/>
			<Setter Property="BorderBrush" Value="#333333"/>
		</Style>
	</Window.Resources>
	<Grid Margin="10,10,10,10">
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="11*"/>
		</Grid.RowDefinitions>
		<DataGrid x:Name="AutomataGrid" Background="#333333" RowBackground="#666666" Foreground="#FFFFFF"
				  Grid.Row="1" HorizontalAlignment="Left" HorizontalContentAlignment="Center" VerticalAlignment="Top" 
				  HeadersVisibility="Column" Style="{DynamicResource DGStyle}" AutoGenerateColumns="False"
				  MaxHeight="358" Width="774" CanUserAddRows="False" IsReadOnly="True" SelectionMode="Single" SelectionUnit="FullRow">
			<DataGrid.Columns>
				<DataGridCheckBoxColumn Header="Enabled" Width="50" Binding="{Binding Enabled}"/>
				<DataGridTextColumn Header="Name" Width="220" Binding="{Binding Name}" />
				<DataGridTextColumn Header="Description" Width="500" Binding="{Binding Description}" />
			</DataGrid.Columns>
		</DataGrid>
		<Grid Grid.Row="0" VerticalAlignment="Top" Height="30">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="75"/>
				<ColumnDefinition Width="75"/>
				<ColumnDefinition Width="75"/>
				<ColumnDefinition Width="75"/>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="75"/>
			</Grid.ColumnDefinitions>
			<Button x:Name="NewButton" Content="New" Click="NewButton_Click" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="75" Margin="0,0,0,5"/>
			<Button x:Name="OpenButton" Content="Open" Click="OpenButton_Click" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Width="75"/>
			<Button x:Name="DeleteButton" Content="Delete" Click="DeleteButton_Click" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" Width="75"/>
			<Button x:Name="ToggleButton" Content="Toggle" Click="ToggleButton_Click" Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center" Width="75"/>
			<Label x:Name="UsernameDisplay" Content="Get username failed." Grid.Column="4" HorizontalAlignment="Right" HorizontalContentAlignment="Right" VerticalAlignment="Center" Foreground="#FFB0B0B0"/>
			<Button x:Name="LogoutButton" Content="Logout" Click="LogoutButton_Click" Grid.Column="5" HorizontalAlignment="Center" VerticalAlignment="Center" Width="75"/>
		</Grid>
	</Grid>
</Window>
